<?xml version="1.0" encoding="utf-8"?>

<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.example.sc.myapplication.ui.SubListShowHideActivity">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        app:image_scale_type="fit_xy"
        android:layout_height="200dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView android:gravity="center"  android:text="@string/welcome"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" android:id="@+id/tv_click"/>

            <TextView android:gravity="center"  android:text="拍照拍照拍照拍照"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tv_click" android:layout_marginTop="15dp"
                android:layout_height="wrap_content" android:id="@+id/tv_pic"/>

            <TextView android:gravity="center"  android:text="百度地图定位"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tv_pic" android:layout_marginTop="15dp"
                android:layout_height="wrap_content" android:id="@+id/tv_map"/>
            <TextView android:gravity="center"  android:text="百度地图定位搜索周边"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tv_pic" android:layout_marginTop="15dp"
                android:layout_height="wrap_content" android:id="@+id/tv_map_poi"/>
            <TextView android:gravity="center"  android:text="登录测试"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tv_map" android:layout_marginTop="15dp"
                android:layout_height="wrap_content" android:id="@+id/tv_login_test"/>
            <TextView android:gravity="center"  android:text="录音demo"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tv_map" android:layout_marginTop="15dp"
                android:layout_height="wrap_content" android:id="@+id/tv_record"/>
            <TextView android:gravity="center"  android:text="极光短信验证"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tv_map" android:layout_marginTop="15dp"
                android:layout_height="wrap_content" android:id="@+id/tv_jpush"/>
            <TextView android:gravity="center"  android:text="图片随着列表滚动逐渐显示"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tv_map" android:layout_marginTop="15dp"
                android:layout_height="wrap_content" android:id="@+id/tv_image_show"/>
            <TextView android:gravity="center"  android:text="Android仿新浪微博加号弹出界面动画"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tv_image_show" android:layout_marginTop="15dp"
                android:layout_height="wrap_content" android:id="@+id/tv_add_anim_show"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>