<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="5"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent"
        android:id="@+id/location" android:text="位置"
        android:gravity="center" android:textSize="20sp"
        android:layout_centerInParent="true" android:textColor="@color/colorAccent"/>
</LinearLayout>
